#    apt-get autoremove -y && apt-get clean -y && \
#    rm -rf /var/lib/apt/lists/* && cd / && rm -rf /essentia/essentia


###################################

# Set working directory
WORKDIR /home/vigia

# Set the default command to run when the container starts
CMD ["/bin/bash"]